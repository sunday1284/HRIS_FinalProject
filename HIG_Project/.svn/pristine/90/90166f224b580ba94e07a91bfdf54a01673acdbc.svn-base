        .form-section, .list-section {
            padding: 20px;
            border: 1px solid #ddd; /* 테두리 설정 */
            border-radius: 8px;
            background-color: #ffffff; /* 배경 흰색 */
        }

        .form-section h2, .list-section h2 {
            text-align: center; /* 제목 가운데 정렬 */
        }

        .form-group {
            margin-bottom: 15px; /* 각 입력 그룹 간 간격 설정 */
