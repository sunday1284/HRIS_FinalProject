/* 반응형 트리 스타일 + 부드러운 전개 효과 */
#empListWrapper {
	max-height: 600px;
	overflow-y: auto;
	background-color: #fff;
	padding: 10px;
	border: 1px solid #ccc;
	border-radius: 5px;
	box-sizing: border-box;
	width: 100%;
}

/* 스크롤바 스타일 */
#empListWrapper::-webkit-scrollbar {
	width: 8px;
}
#empListWrapper::-webkit-scrollbar-thumb {
	background-color: #aaa;
	border-radius: 4px;
}

/* 채팅방 목록용 래퍼 */
#chatRoomWrapper {
	max-height: 500px;
	overflow-y: auto;
	padding: 10px;
	border: 1px solid #ccc;
	background-color: #fff;
	border-radius: 5px;
	box-sizing: border-box;
	width: 100%;
}
#chatRoomWrapper::-webkit-scrollbar {
	width: 8px;
}
#chatRoomWrapper::-webkit-scrollbar-thumb {
	background-color: #888;
	border-radius: 4px;
}

/* 트리 구조 스타일 */
#orgTree, #orgTree ul, .tree-root, .tree-root ul {
	list-style-type: none;
	margin: 0;
	padding-left: 20px;
	word-break: break-word;
	transition: all 0.3s ease;
}

/* 토글(부서/팀) 스타일 */
.toggle {
	cursor: pointer;
	font-weight: bold;
	display: inline-block;
	color: #333;
	white-space: nowrap;
	transition: color 0.3s ease;
}
.toggle::before {
	content: "▶ ";
	margin-right: 5px;
	transition: transform 0.3s ease;
}
.toggle.open::before {
	content: "▼ ";
}

/* 직원 항목 */
.employee-item {
	margin: 4px 0;
	padding: 5px;
	border-bottom: 1px solid #eee;
	cursor: pointer;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	gap: 5px;
	word-break: break-word;
	box-sizing: border-box;
	transition: background-color 0.2s ease, padding-left 0.3s ease;
}
.employee-item:hover {
	background-color: #f0f0f0;
	padding-left: 10px;
}
