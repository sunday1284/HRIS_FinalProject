<style>
body {
	font-family: 'Pretendard', sans-serif;
	background-color: #f4f6f8;
	color: #333;
}

.container {
	margin-top: 30px;
	width: 1600px;
}

.card {
	margin-bottom: 30px;
	border: none;
	border-radius: 15px;
	box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
	overflow: hidden;
	width: 1600px;
}

.card-header {
	font-size: 1.3rem;
	font-weight: 600;
	background-color: #ffffff;
	padding: 20px;
	border-bottom: 1px solid #e0e0e0;
	width: 1600px;
}

.card-body {
	padding: 25px;
