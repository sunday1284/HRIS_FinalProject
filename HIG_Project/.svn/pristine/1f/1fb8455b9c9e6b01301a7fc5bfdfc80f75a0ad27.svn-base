#salaryList td,
#table1 th,
#table1 td {
  text-align: center !important;
}

/* 테이블 헤더 전용 가운데 정렬 */
#table1 thead th {
  text-align: center !important;
  vertical-align: middle;
}

/* 고정 너비 스타일 */
.min-w-25 {
  min-width: 160px;
}

/* 카드 높이 동일하게 */
.equal-height-card {
  min-height: 160px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 테스트 추가 */
  html {
    scroll-behavior: smooth;
  }

  .nav-link {
    color: #495057;
    font-weight: 500;
  }

  .nav-link:hover, .nav-link.active {
    color: #0d6efd;
    border-bottom: 2px solid #0d6efd;
  }
</style>


