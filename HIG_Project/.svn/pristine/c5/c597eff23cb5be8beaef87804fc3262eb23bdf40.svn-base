    function showTemplates(categoryName) {
        document.querySelectorAll(".category-btn").forEach(btn => btn.classList.remove("active"));
        const selectedBtn = document.querySelector(`.category-btn[data-category='${categoryName}']`);
        if (selectedBtn) selectedBtn.classList.add("active");

        // Î™®Îì† ÌÖúÌîåÎ¶ø Î™©Î°ù Ïà®Í∏∞Í∏∞
        $(".template-list").removeClass("active").hide();

        if (categoryName === "all") {
            // Ï†ÑÏ≤¥ Î≥¥Ïù¥Í∏∞
            $(".template-list").addClass("active").fadeIn(400);
        } else {
            // Ìï¥Îãπ Ïπ¥ÌÖåÍ≥†Î¶¨Îßå Î≥¥Ïù¥Í∏∞
            const selectedList = $("#templates-" + categoryName);
            if (selectedList.length > 0) {
                selectedList.addClass("active").fadeIn(400);
            }
        }
    }

    // Î¨∏ÏÑú ÏñëÏãù Î™®Îã¨ Ïó¥Í∏∞
    async function openApprovalForm(templateId, templateTitle, event) {
        if (!templateId) {
            alert("ÌÖúÌîåÎ¶ø IDÍ∞Ä Ïò¨Î∞îÎ•¥ÏßÄ ÏïäÏäµÎãàÎã§.");
            return;
        }
        // ÌÅ¥Î¶≠ Ïï†ÎãàÎ©îÏù¥ÏÖò(ÏÑ†ÌÉù ÏÇ¨Ìï≠)
        if(event) {
            const $link = $(event.target).closest("a");
            if($link.length) {
                $link.fadeOut(200, function(){
                    $link.fadeIn(200);
                });
            }
        }
        // Î™®Îã¨ Ï†úÎ™© Î≥ÄÍ≤Ω, Î°úÎî©ÌôîÎ©¥ ÏÑ∏ÌåÖ
        document.getElementById('approvalFormModalLabel').textContent = templateTitle + ' Î¨∏ÏÑú ÏñëÏãù';
        document.getElementById('approvalFormContainer').innerHTML = `
            <div class="text-center py-4">
                <div class="spinner-border text-primary"></div>
                <p class="mt-2">Î¨∏ÏÑú ÏñëÏãùÏùÑ Î∂àÎü¨Ïò§Îäî Ï§ëÏûÖÎãàÎã§...</p>
            </div>
        `;
        var modal = new bootstrap.Modal(document.getElementById('approvalFormModal'));
        modal.show();

        // ÌÖúÌîåÎ¶ø Î°úÎìú Ìï®Ïàò (approvalTemplate.js Îì± Ï∞∏Í≥†)
        await loadTemplate(templateId);

        // ÎßåÏïΩ "Ïó∞Ï∞®Ïã†Ï≤≠ÏÑú"ÎùºÎ©¥ Ï¥àÍ∏∞Ïóê Î¨∏ÏÑú Ï†úÎ™© ÏûêÎèô ÏûÖÎ†•
        if(templateTitle === "Ïó∞Ï∞®Ïã†Ï≤≠ÏÑú") {
            $("input[name='draftTitle']").val("Ïó∞Ï∞®Ïã†Ï≤≠ÏÑú");
        }
    }
