<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>결재 문서 상세보기</title>
    <!-- 간단한 레이아웃을 위한 스타일 -->
    <style>
      .approval-container {
        display: flex;
        justify-content: space-between; 
        gap: 20px;
        margin-top: 20px;
      }
      /* 왼쪽 영역(연차신청서 폼) */
      .left-panel {
        flex: 1;
        border: 1px solid #ccc;
        padding: 15px;
      }
      /* 오른쪽 영역(결재 라인 + 결재 사유 + 버튼) */
      .right-panel {
        flex: 1;
        border: 1px solid #ccc;
        padding: 15px;
      }
      .right-panel h4 {
        margin-top: 0;
      }
      .reason-area {
        margin-top: 20px;
      }
      .reason-area label {
        display: block;
        margin-bottom: 5px;
      }
      .reason-area textarea {
        width: 100%;
        height: 80px;
        box-sizing: border-box;
      }
      .btn-area {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 15px;
      }
      .left-btns a {
        margin-right: 10px;
      }
      .btn-area button {
        margin-right: 10px;
      }
      /* select 태그 스타일 */
      .action-select {
        margin-bottom: 10px;
      }
    </style>
</head>
<body>
    <h2>결재 문서 상세보기</h2>

    <!-- 숨은 필드들: 서버에서 로드된 값으로 업데이트됨 -->
    <input type="hidden" id="draftId" name="draftId" value=""/>
    <input type="hidden" id="approverId" name="approverId" value=""/>
    <input type="hidden" id="aprStatus" name="aprStatus" value=""/>

    <!-- 전체를 감싸는 컨테이너 -->
    <div class="approval-container">
      <!-- 왼쪽: 연차신청서 폼 -->
      <div class="left-panel">
        <div id="annualFormContainer">
            <p>연차 신청서 폼 로딩 중...</p>
        </div>
      </div>

      <!-- 오른쪽: 결재 라인 + 결재 사유 + 버튼 -->
      <div class="right-panel">
        <!-- 결재 라인 표시 영역 -->
        <div id="detailContainer">
            <p>불러오는 중...</p>
        </div>
        
        <!-- 결재 결과 선택 select -->
        <div class="action-select">
          <label for="approvalAction">결재 상태 변경</label>
          <select class="form-select" aria-label="Default select example" id="approvalAction">
            <option value="">선택하세요</option>
			<option value="승인">승인</option>
			<option value="반려">반려</option>
			<option value="보류">보류</option>
          </select>
        </div>
        
        <!-- 결재 사유 입력 -->
        <div class="reason-area">
          <label for="aprReason">결재 사유:</label>
          <textarea class="form-control" id="aprReason" name="aprReason"></textarea>
        </div>
        
        <!-- 버튼 영역 -->
        <div class="btn-area">
          <div class="left-btns">
            <a class="btn btn-secondary" role="button" 
               href="${pageContext.request.contextPath}/approval/approverDrafts">목록</a>
          </div>
          <div class="right-btns">
            <button class="btn btn-primary" role="button" id="confirmActionBtn">결재 처리</button>
          </div>
        </div>
      </div>
    </div>
    
    <hr/>
    
    <script>
      // contextPath 설정
      window.contextPath = "${pageContext.request.contextPath}";
    </script>
    <!-- JS 로직 -->
    <script src="${pageContext.request.contextPath}/resources/js/approval/approvalDraftDetail.js"></script>
</body>
</html>