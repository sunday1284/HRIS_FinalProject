  <style>
  .button-container {
    position: absolute;
    top:  100px; /* 원하는 위치로 조정 */
    left: 55%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    gap: 10px;
	}
    .container {
      display: flex;
      justify-content: flex-start;
      align-items: flex-start;
      gap: 20px;
    }
    .tree {
      width: 40%;
      font-family: '맑은 고딕', sans-serif;
      font-size: 14px;
    }
    /* 상세 정보 영역 스타일 */
    #detailPane {
      width: 50%;
      padding: 20px;
      border: 1px solid #ccc;
      background: #f9f9f9;
      display: none;
    }
  </style>
  <script src="/resources/js/organization/organization.js" defer></script>
  <h1>조직도</h1>

	<div class="button-container">
	    <input type="text" id="empSearchInput" placeholder="이름, 팀, 부서 검색" class="form-control" style="width:200px;">
	    <button id="empSearchBtn" class="btn btn-primary">검색</button>
	    <button id="openAllBtn" class="btn btn-success">조직도 열기</button>
	    <button id="collapseAllBtn" class="btn btn-secondary">조직도 닫기</button>
	</div>

  <div class="container">

	    <div id="orgTreeContainer">
	       <div id="orgTree"></div>
	    </div>

	    <div id="detailPane">
	       <h2 id="detailTitle"></h2>
	       <div id="detailContent"></div>
	    </div>

		<div style="display: flex; justify-content: right; align-items: center; gap: 100px; width: 100%;">
		    <div style="width: 500px; height: 500px;">
		        <canvas id="deptEmpCountChart"></canvas>
		    </div>
		</div>
