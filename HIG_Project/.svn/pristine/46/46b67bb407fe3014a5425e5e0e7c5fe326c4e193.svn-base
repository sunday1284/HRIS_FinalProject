<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>

<!-- Bootstrap 스타일 -->
<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
	rel="stylesheet">
<link
	href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
	rel="stylesheet">

<!-- DataTables -->
<link rel="stylesheet"
	href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script
	src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<!-- 💬 스타일 영역 -->
<style>
body {
	padding: 40px;
	background-color: #f8f9fa;
	font-family: 'Segoe UI', 'Malgun Gothic', sans-serif;
}

h2 {
	margin-bottom: 25px;
	font-weight: 600;
}

.header-bar {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20px;
}

.table-responsive {
	width: 100%;
	overflow-x: auto;
}

/* 💬 DataTables 셀 스타일 */
#appointTable {
	width: 100% !important;
	border-collapse: collapse;
	table-layout: auto;
}

#appointTable th, #appointTable td {
	text-align: center !important;
	vertical-align: middle !important;
	padding: 10px 8px !important;  /* 🔽 padding 감소 */
	font-size: 16px;              /* 🔽 약간 줄임 */
	line-height: 1.5;             /* 🔽 줄 간격 감소 */
	border-bottom: 1px solid #dee2e6;
	white-space: nowrap;
}

#appointTable thead th {
	background-color: #f8f9fa;
	font-weight: 600;
	border-top: 2px solid #dee2e6;
}

#appointTable tbody tr:hover {
	background-color: #eef6ff !important;
}

.table-primary {
	background-color: #e2eafc !important;
}

.table-warning {
	background-color: #fff3cd !important;
}

/* 💬 발령호수 링크 스타일 */
.appoint-link {
	color: #0d6efd;
	font-weight: 600;
	text-decoration: none;
	cursor: pointer;
}

.appoint-link:hover {
	text-decoration: underline;
	color: #0a58ca;
}
</style>

<div class="page-container container-fluid">
	<div class="d-flex justify-content-between align-items-center mb-2">

		<!-- 좌측: 버튼 그룹 -->
		<div>
			<button type="button" class="btn btn-outline-secondary"
				onclick="history.back();">
				<i class="fas fa-arrow-left"></i>
			</button>
		</div>

		<!-- 우측: Breadcrumb -->
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb mb-0">
				<li class="breadcrumb-item fw-bold text-primary"><a
					href="${pageContext.request.contextPath }/account/login/home">📌Main</a></li>
				<li class="breadcrumb-item"><a href="${pageContext.request.contextPath }/employee/empList">직원관리</a></li>
				<li class="breadcrumb-item active" aria-current="page">인사발령</li>
				<li class="breadcrumb-item"><a href="${pageContext.request.contextPath }/employee/resignList">퇴사자관리</a></li>
			</ol>
		</nav>

	</div>
</div>
<br/>


<div class="card">
	<div class="card-body">
		<div class="header-bar">
			<h2>
				<i class="bi bi-list-ul"></i> 인사발령 리스트
			</h2>
			
<!-- 메시지 출력 -->
<c:if test="${not empty message}">
	<div class="alert alert-success mt-3">${message}</div>
</c:if>
<c:if test="${not empty errorMessage}">
	<div class="alert alert-danger mt-3">${errorMessage}</div>
</c:if>			
			<form
				action="${pageContext.request.contextPath}/employee/appointFormUI"
				method="get">
				<button type="submit" class="btn btn-primary">
					<i class="bi bi-plus-circle me-1"></i> 인사발령 등록
				</button>
			</form>
		</div>

		<div class="table-responsive">
			<table class="table table-bordered table-hover align-middle"
				id="appointTable">
				<thead class="table-light">
					<tr>
						<th rowspan="2">발령호수</th>
						<th colspan="2">직원정보</th>
						<th colspan="5" class="table-primary">이전</th>
						<th colspan="8" class="table-warning">발령정보</th>
					</tr>
					<tr>
						<th>사번</th>
						<th>이름</th>
						<th>부서</th>
						<th>팀</th>
						<th>직급</th>
						<th>직책</th>
						<th>직무</th>
						<th>발령일자</th>
						<th>발령구분</th>
						<th>발령사유</th>
						<th>부서</th>
						<th>팀</th>
						<th>직급</th>
						<th>직책</th>
						<th>직무</th>
					</tr>
				</thead>
				<tbody>
					<c:if test="${not empty appointList}">
						<c:forEach items="${appointList}" var="x">
							<tr>
								<td><c:url value="/employee/appointDetail"
										var="appDetailUrl">
										<c:param name="appwho" value="${x.appId}" />
									</c:url> <a href="${appDetailUrl}" class="appoint-link">${x.appId}</a>
								</td>
								<td>${x.empId}</td>
								<td>${x.employee.name}</td>
								<td>${x.prevDepartmentName}<br>
								<td>${x.prevTeamName}<br>
								<td>${x.prevRankName}<br>
								<td>${x.prevJobName}<br>
								<td>${x.prevPositionName}<br>
								<td><fmt:parseDate value="${x.appDate}"
										pattern="yyyy-MM-dd HH:mm:ss" var="parsedHireDate" /> <fmt:formatDate
										value="${parsedHireDate}" pattern="yyyy-MM-dd" /></td>
								<td>${x.appType}</td>
								<td>${x.appReason}</td>
								<td>${x.newDepartmentName}<br>
								<td>${x.newTeamName}<br>
								<td>${x.newRankName}<br>
								<td>${x.newJobName}<br>
								<td>${x.newPositionName}<br>
							</tr>
						</c:forEach>
					</c:if>
				</tbody>
			</table>
		</div>
	</div>
</div>


<!-- DataTables 초기화 -->
<script>
	$(document).ready(function() {
		$('#appointTable').DataTable({
			"order" : [ [ 0, "desc" ] ], // 0번째 컬럼 = 발령호수, 내림차순
			"language" : {
				"search" : "검색:",
				"lengthMenu" : "_MENU_ 항목씩 보기",
				"info" : "_TOTAL_건 중 _START_부터 _END_까지 표시",
				"paginate" : {
					"next" : "다음",
					"previous" : "이전"
				},
				"zeroRecords" : "일치하는 데이터가 없습니다.",
				"infoEmpty" : "표시할 항목이 없습니다.",
				"infoFiltered" : "(전체 _MAX_ 건 중 필터링됨)"
			},
			"pageLength" : 10,
			"lengthMenu" : [ 10, 20, 30, 40, 50 ],
			autoWidth : false
		// 💬 너비 고정 해제 (반응형 자연 적용)

		});
	});
</script>
